<div class="container d-flex">
  <div class="logo-container">
    <%= image_tag("pentalogo.png", :alt => "rss feed", class: "logo") %>
  </div>


  <div class="notlogged-form">



    <h2>Already registered?</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


    <div class="field">
      <%= f.label :email, class: "form-letter" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "ftext" %>
    </div>

    <div class="field">
      <%= f.label :password ,class: "form-letter"%><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "ftext" %>
    </div>


    <div class="actions">
      <%= f.submit "Log in",class: "form-letter"  %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me ,class: "form-letter"%>
    </div>
    <% end %>

    <% end %>

    
    <% unless current_user %>


    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
    <% else %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% end %>


    <div class="field-joinus-main">

      <%= render "devise/shared/links" %>
    </div>


  </div>
</div>